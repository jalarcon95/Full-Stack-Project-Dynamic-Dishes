    <div class="row">
        <div class="col-md-6 mt-5 text-center card bg-warning">
          <h2 class="mt-3">Login</h2>
      
          <form class="form login-form mt-4">
            <div class="row mb-3">
              <label for="email-login" class="fs-4 col-sm-3 col-form-label">Email:
              </label>
              <div class="col-sm-8">
                <input type="email" class="form-control" id="email-login">
              </div>
            </div>
            <div class="row mb-3">
              <label for="password-login" class="fs-4 col-sm-3 col-form-label">Password:</label>
              <div class="col-sm-8">
                <input type="password" class="form-control" id="password-login">
              </div>
            </div>
            <div class="form-group">
              <button class="btn btn-danger mt-3 fs-4" type="submit">Login</button>
            </div>
          </form>
        </div>
        <div class="col-md-6 mt-5 text-center card pb-5 bg-warning">
          <h2 class="mt-3">Create an Account</h2>
      
          <form class="form signup-form mt-4">
            <div class="row mb-3">
              <label for="name-signup" class="col-sm-3 fs-4 col-form-label">Name:</label>
              <div class="col-sm-8">
                <input type="name" class="form-control" id="name-signup">
              </div>
            </div>
            <div class="row mb-3">
              <label for="email-signup" class="col-sm-3 fs-4 col-form-label">Email:</label>
              <div class="col-sm-8">
                <input type="email" class="form-control" id="email-signup">
              </div>
            </div>
            <div class="row mb-3">
              <label for="password-signup" class="col-sm-3 fs-4 col-form-label">Password:</label>
              <div class="col-sm-8">
                <input type="password" class="form-control" id="password-signup">
              </div>
            </div>
            <div class="form-group">
              <button class="btn btn-danger fs-4" type="submit">Create</button>
            </div>
          </form>
        </div>
      </div>
      
      <script src="/js/login.js"></script>