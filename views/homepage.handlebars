<div class="text-center mt-5 fs-3">
    <h3 class="fs-1">Recipes</h3>
</div>

<!-- Loop over each object in the projects array -->
{{#each recipes as |recipe| }}
<div class="row mb-4 recipe card bg-warning">
  <div class="col-md-12">
    <h2>
      <a class="text-dark" href="/recipes/{{recipe.id}}">{{recipe.title}}</a>
    </h2>
    </div>
  <div class="col-md-12 d-flex justify-content-center">
    <p>Created by {{user.username}} on {{format_date recipe.date_created}}</p>
  </div>
  <div class="d-flex justify-content-center">
        <button id="thumbsUp" class="col-sm-1 m-4 bg-danger">👍</button>
        <p class="fs-4 mt-3" id="count"></p>
        <button id="thumbsDown"class="col-sm-1 m-4 bg-danger">👎</button>
  </div>
</div>
{{/each}}

<script src="/js/button.js"></script>
<script src="/js/profile.js"></script>