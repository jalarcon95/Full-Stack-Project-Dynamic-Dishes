<div class="text-center mt-5 fs-3">
    <h3 class="fs-1">Recipes</h3>
</div>

<!-- Loop over each object in the projects array -->
{{#each recipes as |recipe| }}
<div class="row mb-4 recipe card">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/recipe/{{recipe.id}}">{{recipe.title}}</a>
    </h2>
    <p>Created by {{user.name}} on {{format_date recipe.date_created}}</p>
  </div>
  <div>
        <button class="col-sm-1">👍</button>
        <button class="col-sm-1">👎</button>
  </div>
</div>
{{/each}}