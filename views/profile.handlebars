{{#if recipes.length}}
<div class="col-md-12 recipe-list text-center mt-5">
  <h3>Current Recipies:</h3>

  {{#each recipes as |recipe|}}
  <div class="row card col-md-8 mx-auto">
    <div class="col-md-8 mx-auto mt-3">
      <h4><a href="/recipe/{{recipe.id}}">{{recipe.title}}</a></h4>
      <p>{{recipe.ingredients}}</p>
      <p>{{recipe.instructions}}</p>
    </div>
    <div class="col-md-4 mx-auto">
      <button class="btn btn-sm btn-danger mb-3 mt-3" data-id="{{recipe.id}}">DELETE</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
<div><a href="./create.handlebars">Create a New Recipe</a></div>


<script src="./js/recipe.js"></script>


